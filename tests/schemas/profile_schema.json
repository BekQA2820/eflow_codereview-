{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["jsonapi", "data", "meta"],
  "properties": {
    "jsonapi": {
      "type": "object",
      "required": ["version"],
      "properties": {
        "version": { "type": "string", "enum": ["1.1"] }
      },
      "additionalProperties": false
    },
    "data": {
      "type": "object",
      "required": ["type", "id", "attributes"],
      "properties": {
        "type": { "type": "string", "enum": ["employee-profiles-flat"] },
        "id": { "type": "string", "minLength": 1 },
        "attributes": { "type": "object", "minProperties": 1 }
      },
      "additionalProperties": false
    },
    "meta": { "type": "object" }
  },
  "additionalProperties": false
}
