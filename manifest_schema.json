{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["layout", "widgets", "theme", "locale"],
  "properties": {
    "layout": {
      "type": "object",
      "properties": {
        "rows": {"type": "integer", "minimum": 1},
        "columns": {"type": "integer", "minimum": 1},
        "gridType": {"type": "string"}
      },
      "required": ["rows", "columns"]
    },
    "widgets": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "mfe", "position", "size", "visible"],
        "properties": {
          "id": {"type": "string"},
          "mfe": {"type": "string", "format": "uri"},
          "position": {
            "type": "object",
            "required": ["row", "col", "width"],
            "properties": {
              "row": {"type": "integer", "minimum": 0},
              "col": {"type": "integer", "minimum": 0},
              "width": {"type": "integer", "minimum": 1}
            }
          },
          "size": {"type": "object"},
          "visible": {"type": "boolean"}
        }
      }
    }
  }
}